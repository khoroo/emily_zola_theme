{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outFile": "./static/js/main.js",
    "module": "amd"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
